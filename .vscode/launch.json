{
    "version": "0.2.0",
    "configurations": [
        // プラグインデバッグ用
        {
            "name": "Python Plugin Debug (Attach)",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost", // replace this with remote machine name
                "port": 5678
            },
            "justMyCode": false
        },
        {
            "name": "Python debug current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console" : "integratedTerminal",
            // "stopOnEntry": true,
            "env": {

            }
        },
        {
            "name": "Python: 'mcp7zop'",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp7zop",
            "args": [

            ],
            "console": "integratedTerminal",
            // "stopOnEntry": true,
            "env": {

            }
        },
        {
            "name": "Python: 'mcp7zop option'",
            "type": "debugpy",
            "request": "launch",
            "module": "mcp7zop",
            "args": [
                "-h",
            ],
            "console": "integratedTerminal",
            // "stopOnEntry": true,
            "env": {

            }
        }
    ],
    "compounds": []
